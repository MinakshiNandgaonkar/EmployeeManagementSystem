
@model List<EmployeeInfoManagement.Models.Employee>;

@{
    ViewData["Title"] = "Employee";
}
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        padding: 8px;
        text-align: left;
    }

    table a {
        border: 1px grey solid;
        border-radius: 5px;
        padding: 5px;
        color: #000;
        text-decoration: none;
    }
</style>
<form>
    <button asp-controller="Employee" asp-action="InsertEmployee">Add Employee </button>
    <h1> Employee Information</h1>
    <table>
        <thead>
            <tr>                
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Hire Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var employee in Model)
                {
                    <tr>                       
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Department</td>
                        <td>@employee.HireDate.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@employee.EmployeeId">Edit</a>
                            <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No employee availbale at this moment</td>
                </tr>
            }
        </tbody>
    </table>
</form>