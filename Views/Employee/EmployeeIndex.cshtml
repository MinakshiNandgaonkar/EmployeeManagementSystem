@model List<EmployeeInfoManagement.Models.Employee>;
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
<form>
    <button asp-controller="Employee" asp-action="InsertEmployee">Add Employee </button>
    <h1> Employee Information</h1>
    <table border="1">
        <thead bgcolor="blue">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Hire Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody bgcolor="pink">
            @if (Model != null && Model.Any())
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Department</td>
                        <td>@employee.HireDate</td>
                        <td>
                            <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@employee.EmployeeId">Edit</a>
                            <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No employee availbale at this moment</td>
                </tr>
            }
        </tbody>
    </table>
</form>